<?xml version="1.0" encoding="utf-8"?>
<!-- Custom list item layout used by CourseAdapter -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated" >
	
	<TextView 
	    android:id="@+id/course_list_item_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:layout_alignParentLeft="true"
	    android:text="Course Name"
	    android:textStyle="bold"
	    android:textSize="16sp"/>
	
	<TextView 
	    android:id="@+id/course_list_item_module_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:layout_below="@id/course_list_item_name"
	    android:text="Module Name"/>
    
    <ImageView 
        android:id="@+id/course_list_item_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_edit"
	    android:layout_alignParentRight="true"/>
	
</RelativeLayout>
